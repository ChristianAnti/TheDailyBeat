<!DOCTYPE html>
<html lang="en">

<head>
  <title>Passport Authentication</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css">
  <link href="../public/stylesheets/style.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/logout">
        Logout
      </a>
    </div>
  </div>
</nav>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>
    </div>
  </div>
   <div class="animate__animated animate__slow" id="quote-container"></div>
<div class="quoteBtn-container">

    <button id="quoteBtn" class="button is-warning"> New Quote </button>

</div>

<div id="content" class="container">
    <div class="row">

        <!-- Search box -->
        <div id="left-content" class="col-md-3">
            <form>
                <label for="search-city">City:</label>
                <div class="form-row">
                    <input id="search-city" class="form-control" name="city" value="your-city"></input>
                    <button id="search-button" class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
            <div id="search-error"></div>


        </div>

        <!-- Current weather and five day forecast displays when searched -->
        <div id="content-right" class="col-md-9 pt-4">
            <div id="current-weather" class="border rounded"></div>
        </div>
    </div>
</div>
</div>

{{!----------------------------- Calendar Section ------------------------------}}

    <div class="calendar">
    <div id="calendar-container">
      <div id="calendar-header">
        <div class="headerGroup">
          <div class="calTitle">The Daily Beat Calendar</div>
          <div id="displayMonth"></div>
          <div class="monthNavBtn">
            <button id="backBtn">Back</button>
            <button id="nextBtn">Next</button>
          </div>
        </div>
      </div>
      <div id="daysOfWeek">
        <div class="weekDay">Sunday</div>
        <div class="weekDay">Monday</div>
        <div class="weekDay">Tuesday</div>
        <div class="weekDay">Wednesday</div>
        <div class="weekDay">Thursday</div>
        <div class="weekDay">Friday</div>
        <div class="weekDay">Saturday</div>
      </div>
      <div id="calApp"></div>
    </div>
    <div id="newEventInput">
      <div class="newEvent-title"><h2>New Event</h2></div>
      <div><textarea id="eventTextInput" placeholder="Add Event"></textarea></div>
      <div class="saveBtn">
        <button id="saveButton">Save</button>
        <button id="cancelButton">Cancel</button>
      </div>
    </div>
    <div id="deleteEventInput">
      <h2>Delete Event</h2>
      <p id="eventText"></p>
      <div class="closeDeleteBtn">
        <button id="deleteButton">Delete</button>
        <button id="closeButton">Close</button>
      </div>
    </div>
  </div>
  <div id="backDropShadow"></div>
    <script src="../public/js/calendar-script.js"></script>

{{!----------------------------- Calendar Section ------------------------------}}

